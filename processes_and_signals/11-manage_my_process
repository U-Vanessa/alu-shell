#!/bin/bash

# Define the path to the manage_my_process script
SCRIPT_PATH="/path/to/manage_my_process.sh"  # Replace with the actual path

# Define a function to start the process
start() {
    if [ -f "$SCRIPT_PATH" ]; then
        nohup "$SCRIPT_PATH" &
        echo "manage_my_process started."
    else
        echo "Error: manage_my_process script not found at $SCRIPT_PATH"
    fi
}

# Define a function to stop the process
stop() {
    pkill -f "manage_my_process.sh"
    echo "manage_my_process stopped."
}

# Check the command line argument
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
